@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager 
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity"
               asp-page="/Account/Manage/Index" title="Manage">
                Hello <span id="logged-in-user">@User.Identity?.Name</span>!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark" 
                        id="logout" 
                        type="submit">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a id="register" class="nav-link text-dark" asp-area="Identity"
               asp-page="/Account/Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a id="login" class="nav-link text-dark" asp-area="Identity"
               asp-page="/Account/Login">
                Login
            </a>
        </li>
    }
</ul>